root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
insert_final_newline = true

[*rb]
indent_style = space
indent_size = 2

[*.{sh,bash,zsh}]
indent_style = space
indent_size = 2

[*md]
trim_trailing_whitespace = false

[{.zshrc,.bashrc}]
indent_style = space
indent_size = 2
